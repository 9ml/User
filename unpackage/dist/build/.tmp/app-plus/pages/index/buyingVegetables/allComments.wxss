.comments {
  border-top: 1rpx solid #F6F6F6;
}
.comments .csMs {
    width: 92%;
    margin: 0 auto;
}
.comments .csMs .cm-item {
      border-bottom: 1rpx solid #F6F6F6;
      margin: 20rpx 0 10rpx 0;
}
.comments .csMs .cm-item .ci-user {
        height: 70rpx;
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        -webkit-box-align: center;
        -webkit-align-items: center;
                align-items: center;
}
.comments .csMs .cm-item .ci-user .cu-header {
          width: 60rpx;
          height: 60rpx;
}
.comments .csMs .cm-item .ci-user .cu-header image {
            width: 100%;
            height: 100%;
            border-radius: 50%;
}
.comments .csMs .cm-item .ci-user .cu-info {
          height: 60rpx;
          margin-left: 10rpx;
}
.comments .csMs .cm-item .ci-user .cu-info .ci-name {
            height: 35rpx;
            line-height: 35rpx;
            font-size: 22rpx;
}
.comments .csMs .cm-item .ci-user .cu-info .ci-time {
            height: 25rpx;
            line-height: 25rpx;
            font-size: 20rpx;
            color: #666666;
}
.comments .csMs .cm-item .ci-comments {
        margin: 10rpx 0 10rpx 0;
        font-size: 24rpx;
}
.comments .csMs .cm-item .ci-images {
        margin: 10rpx 0 10rpx 0;
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        -webkit-box-align: center;
        -webkit-align-items: center;
                align-items: center;
        -webkit-flex-wrap: wrap;
                flex-wrap: wrap;
}
.comments .csMs .cm-item .ci-images .ci-item {
          width: 24%;
          height: 170rpx;
          margin: 0 2rpx 2rpx 0;
}
.comments .csMs .cm-item .ci-images .ci-item image {
            width: 100%;
            height: 100%;
}

