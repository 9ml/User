}
.storeItems .si-ms .sm-answer {
      font-size: 26rpx;
      color: #666666;
}
.storeDesc {
  background-color: #FFFFFF;
  margin-bottom: 1rpx;
}
.storeDesc .sd-ms {
    width: 92%;
    margin: 0 auto;
}
.storeDesc .sd-ms .sm-name {
      font-size: 28rpx;
      height: 60rpx;
      line-height: 60rpx;
}
