page {
  background-color: #F6F6F6;
}
.storeMs {
  height: 120rpx;
  background-color: #FFFFFF;
  margin: 2rpx 0 10rpx 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.storeMs .sm-left {
    width: 70%;
    height: 100rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
}
.storeMs .sm-left .sl-header {
      width: 30%;
      height: 100rpx;
      text-align: center;
}
.storeMs .sm-left .sl-header image {
        width: 100rpx;
        height: 100rpx;
}
.storeMs .sm-left .sl-name {
      width: 70%;
      height: 100rpx;
      line-height: 100rpx;
      font-size: 28rpx;
}
.storeMs .sm-right {
    width: 30%;
}
.storeMs .sm-right .sr-ms {
      width: 160rpx;
      height: 60rpx;
      border-radius: 30rpx;
      margin: 0 auto;
      background-color: #F8820F;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
      font-size: 28rpx;
      text-align: center;
      line-height: 60rpx;
      color: #FFFFFF;
}
.storeMs .sm-right .sr-ms .sr-icon {
        width: 36%;
        height: 60rpx;
        text-align: right;
}
.storeMs .sm-right .sr-ms .sr-icon image {
          width: 24rpx;
          height: 24rpx;
          margin-top: 18rpx;
}
.storeMs .sm-right .sr-ms .sr-fonts {
        margin-left: 10rpx;
}
.storeItems {
  background-color: #FFFFFF;
  margin-bottom: 1rpx;
}
