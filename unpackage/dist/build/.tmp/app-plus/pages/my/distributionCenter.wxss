.top {
  width: 100%;
  height: 360rpx;
  color: white;
  background-color: #5190f7;
}
.top .left {
    position: absolute;
    margin-top: 90rpx;
    margin-left: 30rpx;
    width: 490rpx;
    height: 160rpx;
}
.top .left .title {
      font-size: 32rpx;
}
.top .left .num {
      font-size: 80rpx;
}
.top .right {
    position: absolute;
    margin-left: 520rpx;
    margin-top: 150rpx;
    color: white;
    width: 180rpx;
    height: 60rpx;
    font-size: 30rpx;
    text-align: center;
    line-height: 60rpx;
    border-radius: 10rpx;
    background-color: #f88312;
}
.top .foot {
    position: absolute;
    margin-top: 295rpx;
    width: 100%;
    height: 65rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    font-size: 30rpx;
    background-color: rgba(0, 0, 0, 0.3);
}
.top .foot text {
      margin-left: 30rpx;
}
.top .foot .foot_r {
      position: absolute;
      right: 30rpx;
}
.list {
  width: 100%;
  height: 90rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  font-size: 30rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  background-color: white;
  border-top: 1px solid #f6f6f6;
}
.list image {
    margin-left: 30rpx;
    margin-right: 20rpx;
    width: 45rpx;
    height: 50rpx;
}
.list .right {
    position: absolute;
    right: 20rpx;
    color: gray;
