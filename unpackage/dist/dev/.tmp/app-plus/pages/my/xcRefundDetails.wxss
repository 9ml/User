.top {
  width: 100%;
  height: 180rpx;
  color: white;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  background-color: #fc8e1d;
}
.top .title {
    font-size: 30rpx;
    font-weight: 500;
    margin-left: 75rpx;
}
.top .time {
    font-size: 26rpx;
    margin-left: 75rpx;
}
.row {
  width: 100%;
  height: 90rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 30rpx;
  background-color: white;
  border-bottom: 1px solid #f6f6f6;
}
.row text {
    margin-left: 30rpx;
}
.row .right {
    position: absolute;
    right: 20rpx;
    color: gray;
}
.con {
  width: 100%;
  font-size: 30rpx;
  border-radius: 15rpx;
  background-color: white;
  padding-bottom: 20rpx;
}
.con .row1 {
    width: 100%;
    height: 225rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    background-color: #f2f2f2;
}
.con .row1 image {
      margin-left: 20rpx;
      width: 195rpx;
      height: 195rpx;
}
.con .row1 .right {
      margin-left: 15rpx;
      width: 565rpx;
      height: 100rpx;
}
.con .row1 .right .title {
        font-size: 28rpx;
}
.con .row1 .right .name {
        margin-top: 40rpx;
        font-size: 26rpx;
        color: gray;
}
.con .row1 .right .num {
        position: absolute;
        right: 30rpx;
        font-size: 26rpx;
}
.con .row2 {
    width: 100%;
    color: gray;
    font-size: 28rpx;
}
.con .row2 view {
      margin-top: 10rpx;
      width: 500rpx;
      height: 30rpx;
      margin-left: 20rpx;
}

